<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <title>Sales Manager</title>
  <script src="/js/jquery-3.4.1.min.js"></script>
  <script src="/js/loadhtml.js"></script>

  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">
  <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>

  <!-- All CSS for this webpage can be found in a section in the stylesheet -->
  <link href="html/styles/stylesheet.css" rel="stylesheet" />
</head>

<body>
	<!-- Include Header element -->
  <div class="navbar" id="navbar"></div>
  <h1>View Items</h1>
  <a href='/ManageItems'><p>< Item Management</p></a>

  <!-- Table to display Sales Record Data -->
  <table id="ItemTable" class="table table-hover table-bordered">

    <!-- Hard coded table headers -->
    <thead>
      <tr>
        <th class="centerColText">Item ID</th>
        <th class="centerColText">Name</th>
        <th class="centerColText">Price</th>
        <th class="centerColText">Type</th>
        <th class="centerColText">Quantity</th>
        <th class="centerColText">Sales Data</th>
        <th class="centerColText">Edit</th>
        <th class="centerColText">Delete</th>

      </tr>
    </thead>

    <!-- Table body -->
    <tbody>

    <!-- If there is table data - print it out -->
    <% if(ItemData.length) {
      <!-- Create table entry for each observation -->
      for(var i = 0; i < ItemData.length; i++)
      { %>
        <tr>
          <td class="centerColText"><%= ItemData[i].Item_ID %></td>
          <td class="centerColText"><%= ItemData[i].Item_Name %></td>
          <td class="centerColText"><%= ItemData[i].Price %></td>
          <td class="centerColText"><%= ItemData[i].item_Type %></td>
          <td class="centerColText"><%= ItemData[i].stockQuantity%></td>
          <td class="td-button"><a class="general-button" href='/ForecastSales?itemID=<%= ItemData[i].itmType_ID %>'>Prediction</a></td>
          <td class="td-button"><a class="general-button" href='/EditItem?itemID=<%= ItemData[i].Item_ID %>'>Edit</a></td>
          <td class="td-button"><a class="general-button" href='/DeleteItem?itemID=<%= ItemData[i].Item_ID %>'>Delete</a></td>

        </tr>
    <% }
    }
    <!-- Else there is no table data -->
    else { %>
      <tr>
      	<!-- Alert the user -->
        <td colspan="8">NO ITEM DATA FOUND - Add Item records to database and they will display here</td>
      </tr>
    <% }
    %>
    </tbody>
  </table>

  <!-- Include Footer element -->
  <br />
  <div id="footer"> </div>



<script type="text/javascript">
$(document).ready(function() 
{
  $('#ItemTable').dataTable(
  {
    "columnDefs": [
      { "orderable": false, "targets": [5, 6, 7] },
      { "searchable": false, "targets": [5, 6, 7] },
    ]
  });
});
</script>
</body>
</html>
