<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <title>Sales Manager</title>
  <script src="/js/jquery-3.4.1.min.js"></script>
  <script src="/js/loadhtml.js"></script>

  <!-- All CSS for this webpage can be found in a section in the stylesheet -->
  <link href="html/styles/stylesheet.css" rel="stylesheet" />
</head>

<body>
	<!-- Include Header element -->
  <div class="navbar" id="navbar"></div>
  <h1>Items</h1>

  <!-- Table to display Sales Record Data -->
  <table class="table table-hover table-bordered">

    <!-- Hard coded table headers -->
    <thead>
      <tr>
        <th scope="col">Item ID</th>
        <th scope="col">Item Name</th>
        <th scope="col">Item Price</th>
        <th scope="col">Item Type</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
        <th scope='col'>Sales Data</th>
      </tr>
    </thead>

    <!-- Table body -->
    <tbody>

    <!-- If there is table data - print it out -->
    <% if(ItemData.length) {
      <!-- Create table entry for each observation -->
      for(var i = 0; i < ItemData.length; i++)
      { %>
        <tr>
          <td><%= ItemData[i].Item_ID %></td>
          <td><%= ItemData[i].Item_Name %></td>
          <td><%= ItemData[i].Price %></td>
          <td><%= ItemData[i].item_Type %></td>

          <td class="td-button"><a class="general-button" href='/EditItem?itemID=<%= ItemData[i].Item_ID %>'>Edit Item</a></td>
          <td class="td-button"><a class="general-button" href='/DeleteItem?itemID=<%= ItemData[i].Item_ID %>'>Delete Item</a></td>
          <td class="td-button"><a class="general-button" href='/ForecastSales?itemID=<%= ItemData[i].itmType_ID %>'>View Sales/Prediction</a></td>

        </tr>
    <% }
    }
    <!-- Else there is no table data -->
    else { %>
      <tr>
      	<!-- Alert the user -->
        <td colspan="6">NO ITEM DATA FOUND - Add Item records to database and they will display here</td>
      </tr>
    <% }
    %>
    </tbody>
  </table>

  <!-- Include Footer element -->
  <br />
  <div id="footer"> </div>
</body>
</html>
